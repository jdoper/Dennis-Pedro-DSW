<!DOCTYPE html>
<html>
<head>
	<title>O(n) Livros Online</title>
	<%= stylesheet_link_tag "application", media: "all",
	"data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>


</head>

<body class="<%= controller.controller_name %>">
	<div class="body">
	<div id="banner">
		<%= @page_title || "Livraria O(n)" %>
	</div>
	<div class="menu">
		<ul align="center">
			<li><%= link_to 'Home', store_path %></li>	
			<li><%= link_to 'Produtos', products_path %></li>
			<li><%= link_to 'Orders', orders_path %></li>	
			<li><%= link_to 'Carts', carts_path %></li>
		</ul>	
	</div>
	<div id="columns">
		<div id="side">
			<div id="cart">
				<% if @cart != nil %>
					<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
						<%= render @cart %>
					<% end %>
				<% end %>
			</div>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
	</div>
</body>
</html>
